<div class="booking-title">
  <h1>Réservez votre château</h1>
</div>

<div class="form-booking" style="width: 400px">
  <%= simple_form_for([@castle, @booking], method: "post") do |f| %>
      <%= f.input :arrival_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :departure, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :number_of_people, input_html: { max: @castle.max_capacity, min: 1, value: 1} %>
      <%= f.button :submit, "Réservez", class: "btn btn-secondary" %>
    <%#= f.button :submit, "Proposer mes dates", class: "btn btn-secondary" %>
  <% end %>
</div>
