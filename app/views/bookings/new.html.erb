<div class="booking-new">

  <div class="booking-title">
    <h1>Réservez votre château<span id="point">.</span></h1>
  </div>

  <div class="form-booking" style="width: 400px">
    <%= simple_form_for([@castle, @booking], method: "post") do |f| %>
        <%= f.input :arrival_date, :label => "Arrivée", as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :departure, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :number_of_people %>
        <%= f.button :submit, "Je réserve", class: "btn btn-gold" %>
      <%#= f.button :submit, "Proposer mes dates", class: "btn btn-gold" %>
    <% end %>
  </div>
</div>

<div class="form-booking" style="width: 400px">
