          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
              <% @bookings.each do |bk| %>
                <% if bk.status_pending? %>
                  <div class="card-product">
                    <%= image_tag "reservations.jpg", alt: "Chateau 1", class: "rounded", width: 350 %>
                    <div class="card-product-infos">
                      <h2><%= bk.castle.title %></h2>
                      <p> <%= bk.castle.description %> </p>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
            <div class="tab-pane fade" id="accepted" role="tabpanel" aria-labelledby="accepted-tab">
              <% @bookings.each do |bk| %>
                <% if bk.status_accepted? %>
                  <div class="card-product">
                    <%= image_tag "reservations.jpg", alt: "Chateau 1", class: "rounded", width: 350 %>
                    <div class="card-product-infos">
                      <h2><%= bk.castle.title %></h2>
                      <p> <%= bk.castle.description %> </p>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
            <div class="tab-pane fade" id="refused" role="tabpanel" aria-labelledby="refused-tab">
              <% @bookings.each do |bk| %>
                <% if bk.status_refused? %>
                  <div class="card-product">
                    <%= image_tag "reservations.jpg", alt: "Chateau 1", class: "rounded", width: 350 %>
                    <div class="card-product-infos">
                      <h2><%= bk.castle.title %></h2>
                      <p> <%= bk.castle.description %> </p>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
